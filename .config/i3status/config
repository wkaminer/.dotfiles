
general {
  output_format = "i3bar"
  colors = true
  interval = 1 
}

order += "cpu_usage"
order += "memory"
order += "disk /"
order += "battery all"
order += "tztime local"
order += "volume master"


disk "/" {
  format = " %percentage_free"
}

cpu_usage {
        format= " %usage"
        max_threshold= 75
}

memory {
  memory_used_method = classical
  format=" %used/%total"
}

battery all {
        format = "%status • %percentage • %remaining"
        format_down = ""
        status_chr = " CHR"
        status_bat = " BAT"
        status_unk = " UNK"
        status_full = " FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = " %a %m-%d-%Y %I:%M%P"
        hide_if_equals_localtime = false
}

volume master {
        format = " %volume "
        format_muted = "VOL muted "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
